<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %> 

<body>
    <%- include('./partials/header') %> 


    <main>

        <div class="post-detail container">

            <section class="center main-content post">
                <div class="info-usuario">
                    <img src="https://via.placeholder.com/40" alt="">
                    <p><a href="/users/userDetails">usuario</a></p>
                </div>
                <img class="photo" src="https://via.placeholder.com/500x600" alt="">
             

            </section>

            <section class="right">
                <h4>Comentarios</h4>
                <section class="comments">
                    <form action="" class="comment-form">
                        <input type="text" class="input" placeholder="Agregar comentario">
                        <button type="submit">Comentar</button>
                    </form>

                    <div>
                        <% for( let i = 0; i < users.length; i++ ) { %>
                        
                        
                        <article class="comment">
                            <img src="https://via.placeholder.com/40" alt="">
                            <section class="content">
                                <a class="user" href="/users/userDetails"><%= users[i].username %> </a>
                                <span class="text"><%= users[i].commentDetallePost %> </span>
                            </section>
                        </article>
                        <% } %>
                    </div>
                </section>
            </section>
        </div>
    </main>

    <%- include('./partials/footer') %> 
    
</body>

</html>