<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %>

<body>
    <%- include('./partials/header') %>


    <main>
        <section class="center main-content">
            <h1>Edit Profile</h1>
          <!--form-->
          <form action="/users/myprofile" >
            <div>
                <label for="email">Email</label>
                <input type="email" name="email" value="<%= users[indice].email%> ">
            </div>
            <div>
                <label for="username">Username</label>
                <input type="text" name="username" value="<%= users[indice].userName %> ">
            </div>
            <div>
                <label for="password">Password</label>
                <input type="password" name="password" value="<%= users[indice].contrasenia %> ">
            </div>
            <div>
                <label for="profile-picture">Profile Picture</label>
                <input type="text" name="profile-picture" value="<%= users[indice].profilePicture %> " >
            </div>
            <div>
                <label for="date">Date of Birth</label>
                <input type="date" name="date" value="<%= users[indice].fecha %> ">
            </div>
            <div>
                <label for="dni">DNI</label>
                <input type="text" name="number-dni" value="<%= users[indice].dni %> ">
            </div>
            <button type="submit">Confirm</button>
        </form>
        </section> 
    </main>

    <%- include('./partials/footer') %>


</body>

</html>