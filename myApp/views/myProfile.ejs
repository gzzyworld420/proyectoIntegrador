<!DOCTYPE html>
<html lang="en">

<!--partials head-->
<%- include('partials/head') %> 

<body>
    <!--partials header-->
    <%- include('./partials/header') %>

    <main>
        <div class="user-detail container">
            <section class="top main-content">
                <img class="profile" src="<%= posts.fotoperfil%> " alt="">
                <div class="info-usuario">
                    <p><%= user.username%> </p>
                    <a class="follow" href="/users/editProfile/0"><i class="fa-solid fa-user-gear"></i></a>
                    <ul class="meta">
                        <li> <%= user.posts%> posts</li>
                        <li><%= user.followers%> followers</li>
                        <li><%= user.following%> following</li>
                    </ul>
                </div>
            </section>

            <section class="bottom">

                <% for( let i = 0; i < posts.length; i++ ) { %>
                <article class="post">
                    <a href="/posts/postDetails/0">
                        <img src="<%= posts[i].imagen %> " alt="">
                        <p><%= posts[i].description %></p>
                    </a>
                </article>
                <% } %>
            </section>
        </div>
    </main>

    <!--partials footer-->
    <%- include('partials/footer') %>

</body>

</html>