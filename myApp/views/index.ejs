<!DOCTYPE html>
<html lang="en">

<!--partial head-->
<%- include('./partials/head') %>


<body>

   <!--partials header-->
   <%- include('./partials/header') %>

    <main>
        <h1><%=  %> </h1>
        <section class="center main-content">
            <% for( let i = 0; i < posts.length; i++ ) { %>
                <article class="post">
                    <div class="info-usuario ">
                        <img src="<%= posts[i] %> " alt="">
                    </div>
                    
                    <div class="post-body">
                        <a href="/posts/postDetails/<%= posts[i].FkUserid %> ">
                            <img src="<%= posts[i].foto %> " alt="">
                        </a>
                    </div>
                    <ul class="post-reacciones">
                        <li>
                            <i class="fa-regular fa-heart"></i>
                        </li>
                        <li>
                            <i class="fa-regular fa-comment"></i>
                        </li>
                    </ul>
                    
                    <div class="post-comentarios">
                        <h4>
                            <a href="/users/userDetails">
                            <%= posts[i].username %>:
                        </h4>
                        <h4 class="post-description"><%= posts[i].description %> </h4>
                        <ul>
                            <h4>Other users say:</h4>
                            <li>
                                <a href="/users/userDetails">
                                <span><%= posts[i].comment1 %> </span>
                            </a>
                            
                            </li>
                            <li>
                                <a href="/users/userDetails">
                                <span><%= posts[i].comment2 %></span>
                            </a>
                            </li>
                            <a href="/posts/postDetails/<%= posts[i]%>">Ver mÃ¡s...</a>
                        </ul>
                    </div>
                </article>
            <% } %>
        </section>
    </main>

  <!--partials footer-->
  <%- include('./partials/footer') %>

</body>

</html>