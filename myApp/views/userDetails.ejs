<!DOCTYPE html>
<html lang="en">

    <!--partials head-->
    <%- include('./partials/head') %>

<body>
    <!--partials header-->
    <%- include('./partials/header') %>

    <main>
        <div class="user-detail container">
            <section class="top main-content">

                <div class="info-usuario">
               <% for( let i = 0; i < 1; i++ ) { %>
                <p><strong><%= posts[i].usuarios %></strong> </p> 
                <% } %>
                
                   
                    <a class="follow" href="">Follow</a>
                    <ul class="meta">
                        <li> 3 posts</li>
                        <li> 150followers</li>
                        <li> 400 following</li>
                    </ul>
                </div>
             

            </section>
            
            <section class="bottom">               
                <% for( let i = 0; i < posts.length; i++ ) { %>
                    <article class="post">
                        <a href="/posts/postDetails/0">
                            <img src="<%= posts[i].foto %> " alt="">
                        </a>
                    </article>
                <% } %>
               
              

            </section>
        </div>
    </main>

    <!--partials footer-->
    <%- include('./partials/footer') %>

</body>

</html>